<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pfl.module_user.activity.ModuleUserIntelligentHardwareManagerActivity">

        <include
            android:id="@+id/in_toolbar_layout"
            layout="@layout/common_databinding_toolbar_layout" />

        <include
            android:id="@+id/line"
            layout="@layout/lib_common_gradient_line"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/in_toolbar_layout" />

        <LinearLayout
            android:id="@+id/module_user_ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/withe"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/in_toolbar_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="设备状态"
                    android:textColor="#1C2737"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/module_user_ic_mine_item_right_arror"
                    android:text="开启"
                    android:textColor="#3DC9C0" />

            </RelativeLayout>

            <include
                layout="@layout/common_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="GPS"
                    android:textColor="#1C2737"
                    android:textSize="16dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp" />

            </RelativeLayout>

            <include
                layout="@layout/common_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="当前位置"
                    android:textColor="#1C2737"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    android:text="北京市,立军路"
                    android:textColor="#6A7E9A" />

            </RelativeLayout>

            <include
                layout="@layout/common_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp" />

            <RelativeLayout
                android:id="@+id/module_user_rl_sound_setting"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="声音设置"
                    android:textColor="#1C2737"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/module_user_tv_current_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/module_user_ic_mine_item_right_arror"
                    android:text="男声"
                    android:textColor="#6A7E9A" />

            </RelativeLayout>

            <include
                layout="@layout/common_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="重启设备"
                    android:textColor="#1C2737"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@drawable/module_user_ic_mine_item_right_arror"
                    android:textColor="#6A7E9A" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@color/withe"
            android:text="恢复出厂设置"
            android:textColor="#1C2737"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/module_user_ll_setting" />

    </android.support.constraint.ConstraintLayout>
</layout>
