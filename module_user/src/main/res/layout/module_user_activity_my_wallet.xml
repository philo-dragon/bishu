<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.pfl.module_user.activity.ModuleUserMyWalletActivity">

        <include
            android:id="@+id/in_toolbar_layout"
            layout="@layout/common_databinding_toolbar_layout" />

        <RelativeLayout
            android:id="@+id/rl_img_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_toolbar_layout"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="200px"
                android:layout_height="200px"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_toRightOf="@+id/img_1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_toRightOf="@+id/img_2"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_below="@+id/img_1"
                android:layout_marginTop="10px"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/img_5"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_below="@+id/img_1"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/img_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/img_6"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_below="@+id/img_1"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/img_5"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
