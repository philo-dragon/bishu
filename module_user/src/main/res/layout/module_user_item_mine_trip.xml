<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/module_user_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待售行程"
            android:textColor="#ff63727d"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/module_user_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/module_user_tv_name"
            android:layout_marginTop="9px"
            android:text="2018-05-25 16:12 ~ 2018-05-26 13:54"
            android:textColor="#ff63727d"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/module_user_tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60px"
        android:text="0"
        android:textColor="#ff1dbdaa"
        android:textSize="30dp" />

</RelativeLayout>