<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:overScrollMode="never">

        <include
            android:id="@+id/in_toolbar_layout"
            layout="@layout/common_databinding_toolbar_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/module_user_img_photo"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90px"
                android:src="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="51px"
                android:layout_toRightOf="@+id/module_user_img_photo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王大白"
                    android:textColor="#ff63727d"
                    android:textSize="54px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1380****000"
                    android:textColor="#ff63727d"
                    android:textSize="54px" />

            </LinearLayout>

            <ImageView
                android:layout_width="30px"
                android:layout_height="54px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90px"
                android:text="实名认证"
                android:textColor="#ff63727d"
                android:textSize="54px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:text="已认证 >"
                android:textColor="#ff1dbdaa"
                android:textSize="42px" />

        </RelativeLayout>

        <include
            android:id="@+id/line_wallet"
            layout="@layout/common_line"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="45px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90px"
                android:text="车主认证"
                android:textColor="#ff63727d"
                android:textSize="54px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:text="未认证 >"
                android:textColor="#F5A623"
                android:textSize="42px" />

        </RelativeLayout>

        <include
            android:id="@+id/line_wallet"
            layout="@layout/common_line"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="45px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90px"
                android:text="车辆认证"
                android:textColor="#ff63727d"
                android:textSize="54px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:text="未认证 >"
                android:textColor="#F5A623"
                android:textSize="42px" />

        </RelativeLayout>

        <include
            android:id="@+id/line_wallet"
            layout="@layout/common_line"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="45px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90px"
                android:text="智能硬件"
                android:textColor="#ff63727d"
                android:textSize="54px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:text="ADAS 已连接 >"
                android:textColor="#ff1dbdaa"
                android:textSize="42px" />

        </RelativeLayout>

        <include
            android:id="@+id/line_wallet"
            layout="@layout/common_line"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="45px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90px"
                android:text="设置"
                android:textColor="#ff63727d"
                android:textSize="54px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:text="已认证 >"
                android:textColor="#ff1dbdaa"
                android:textSize="42px" />

        </RelativeLayout>

        <include
            android:id="@+id/line_wallet"
            layout="@layout/common_line"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="45px" />


    </LinearLayout>

</layout>



