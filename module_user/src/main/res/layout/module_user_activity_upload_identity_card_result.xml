<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userIndentity"
            type="com.pfl.common.entity.module_user.UserIndentity" />

        <variable
            name="viewModel"
            type="com.pfl.module_user.viewmodel.UploadIndentityResultViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.pfl.module_user.activity.ModuleUserUploadIdentityCardActivity">

        <include
            android:id="@+id/in_toolbar_layout"
            layout="@layout/common_databinding_toolbar_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/module_user_upload_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="请拍摄并上传你的身份证照片"
                    android:textColor="#ff1c2737"
                    android:textSize="16dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/module_user_fl_identity_card_front"
                    android:layout_width="297dp"
                    android:layout_height="182dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/withe"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/module_user_img_upload_file_front_img"
                        android:layout_width="285dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:src="@drawable/module_user_ic_identity_card_front" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/module_user_img_upload_file_front"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/module_user_ic_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重新上传"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/module_user_fl_identity_card_back"
                    android:layout_width="297dp"
                    android:layout_height="182dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/withe"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/module_user_img_upload_file_back_img"
                        android:layout_width="285dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:src="@drawable/module_user_ic_identity_card_back" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/module_user_img_upload_file_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/module_user_ic_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重新上传"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="根据身份证照片识别以下信息"
                        android:textColor="#6A7E9A"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="本人姓名"
                            android:textColor="#6A7E9A" />

                        <TextView
                            android:id="@+id/module_user_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{userIndentity.name}"
                            android:textColor="#1C2737" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="身份证号"
                            android:textColor="#6A7E9A" />

                        <TextView
                            android:id="@+id/module_user_tv_card_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{userIndentity.id_number}"
                            android:textColor="#1C2737" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="发证机关"
                            android:textColor="#6A7E9A" />

                        <TextView
                            android:id="@+id/module_user_tv_office"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{userIndentity.issuing_authority}"
                            android:textColor="#1C2737" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="有效期"
                            android:textColor="#6A7E9A" />

                        <TextView
                            android:id="@+id/module_user_tv_indate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{viewModel.dateFormat(userIndentity.start_ts)+"-"+viewModel.dateFormat(userIndentity.end_ts)}'
                            android:textColor="#1C2737" />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/module_user_cv_commit"
                    android:layout_width="250dp"
                    android:layout_height="42dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="#3DC9C0"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="确定"
                        android:textColor="#ffffffff"
                        android:textSize="17dp" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="42dp"
                    android:layout_marginTop="30dp"
                    android:text="比数智能出行保证您的数据安全"
                    android:textColor="#6A7E9A"
                    android:textSize="15dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
